{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="login-container container">
    <h1 class="login-title">Veuillez vous connecter</h1>
    
    <div class="form-container">
        {% if error %}
            <div class="alert alert-danger"> Vos identifiants sont incorrects.
            </div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Vous êtes connecté(e) en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
            </div>
        {% endif %}
        {% for message in app.flashes('successAccount') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
        {% endfor %}

        <form method="post">
            <div class="form-group">
                <label for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="form-group">
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >
            
            <div class="mt-3">
                <button class="btn btn-primary btn-login" type="submit">Se connecter</button>
            </div>
        </form>
    </div>
</div>
{% endblock %}