{% extends 'base.html.twig' %}

{% block title %}Liste des événements{% endblock %}

{% block body %}
<h1>Liste des événements</h1>

<div>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
</div>

<div class="card-deck">
    {% for event in events %}
    <div class="card mb-4">
        <div class="card-header">
            <h5 class="card-title">{{ event.title }}</h5>
        </div>
        <div class="card-body">
            <p class="card-text">{{ event.description }}</p>
            <p class="card-text"><small class="text-muted">Début : {{ event.startDateTime|date('d/m/Y H:i') }}</small>
            </p>
            <p class="card-text"><small class="text-muted">Fin : {{ event.endDateTime|date('d/m/Y H:i') }}</small></p>
        </div>
        <div class="card-footer">
            <small class="text-muted">Organisé par : {{ event.user.username }}</small>
            {% if app.user and app.user.id == event.user.id %}
            <a href="{{ path('app_update_event', {'id': event.id}) }}" title="Modifier l'événement">
                <i class="fas fa-pencil-alt"></i>
            </a>
            {% endif %}
        </div>
        <div class="card-footer">
            <small class="text-muted">Organisé par : {{ event.user.username }}</small>
            {% if app.user and app.user.id != event.user.id %}
                {% if app.user.registeredEvents.contains(event) %}
                    <a href="{{ path('event_unregister', {'id': event.id}) }}" class="btn btn-danger">Se désinscrire</a>
                {% else %}
                    <a href="{{ path('event_register', {'id': event.id}) }}" class="btn btn-success">S'inscrire</a>
                {% endif %}
            {% endif %}
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}